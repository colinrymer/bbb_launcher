<%= simple_form_for @session, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :start_time %>
  <%= f.input :moderators %>
  <%= f.input :viewers %>
  <%= f.input :recorded %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sessions_path, :class => 'btn' %>
  </div>
<% end %>
